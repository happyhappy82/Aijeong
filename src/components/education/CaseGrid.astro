---
import CaseCard from "./CaseCard.astro";
import type { EducationCase } from "../../lib/types";

interface Props {
  cases: EducationCase[];
}

const { cases } = Astro.props;
---

{cases.length === 0 ? (
  <div class="text-center py-20 text-muted-foreground">
    <p class="text-lg">아직 등록된 교육사례가 없습니다.</p>
  </div>
) : (
  <div class="divide-y divide-border">
    {cases.map((educationCase) => (
      <CaseCard educationCase={educationCase} />
    ))}
  </div>
)}
