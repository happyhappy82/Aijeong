---
import { cn } from "@/lib/utils";

interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className, hover = true } = Astro.props;
---

<div
  class={cn(
    "rounded-2xl bg-card border border-border p-6 transition-all duration-300",
    hover && "hover:shadow-lg hover:shadow-accent/5 hover:-translate-y-1",
    className
  )}
>
  <slot />
</div>
