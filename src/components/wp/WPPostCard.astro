---
import { formatDate } from "@/lib/utils";
import Badge from "@/components/ui/Badge.astro";

interface Props {
  slug: string;
  title: string;
  excerpt: string;
  date: string;
  categorySlug: string;
  featuredImage: string | null;
}

const { slug, title, excerpt, date, categorySlug, featuredImage } = Astro.props;

// Get category display name from slug
const getCategoryName = (slug: string) => {
  const categoryMap: Record<string, string> = {
    'blog': '블로그',
    'casestudy': '교육사례',
    'education': '교육',
    'ai': 'AI',
    'news': '소식',
  };
  return categoryMap[slug] || slug;
};
---

<a href={`/${slug}/`} class="group block h-full">
  <article class="h-full flex flex-col border border-border rounded-xl overflow-hidden transition-all duration-300 hover:shadow-lg hover:border-accent/30 bg-card">
    <div class="relative aspect-video overflow-hidden bg-muted">
      {featuredImage ? (
        <img
          src={featuredImage}
          alt={title}
          loading="lazy"
          class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
        />
      ) : (
        <div class="w-full h-full bg-gradient-to-br from-accent/20 to-accent/5 flex items-center justify-center">
          <span class="text-2xl font-bold text-accent/40">
            {getCategoryName(categorySlug)}
          </span>
        </div>
      )}
      <div class="absolute top-3 right-3">
        <Badge variant="accent" class="shadow-md">
          {getCategoryName(categorySlug)}
        </Badge>
      </div>
    </div>

    <div class="flex flex-col flex-1 p-5">
      <h3 class="text-lg font-bold leading-snug line-clamp-2 mb-2 group-hover:text-accent transition-colors">
        {title}
      </h3>

      <p class="text-sm text-muted-foreground line-clamp-2 leading-relaxed mb-4 flex-1">
        {excerpt}
      </p>

      <div class="flex items-center gap-1 text-xs text-muted-foreground mt-auto">
        <svg class="w-3.5 h-3.5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
        {formatDate(date)}
      </div>
    </div>
  </article>
</a>
