---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Container from "../../components/ui/Container.astro";
import Badge from "../../components/ui/Badge.astro";
import { getBlogPosts } from "../../lib/wp-content";
import { formatDate } from "../../lib/utils";

const posts = await getBlogPosts();

// Strip HTML from excerpts
const stripHtml = (html: string) => html.replace(/<[^>]*>/g, '').replace(/&amp;#8230;/g, '…').replace(/&[^;]+;/g, '').trim();

const collectionSchema = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: '블로그 – 에이정',
  description: '에이정의 AI 교육 인사이트, 트렌드, 그리고 실무 팁을 공유합니다.',
  url: 'https://aijeong.com/135-2/',
  isPartOf: { '@type': 'WebSite', name: '에이정', url: 'https://aijeong.com' },
  numberOfItems: posts.length
};
---

<BaseLayout
  title="블로그"
  description="에이정의 AI 교육 인사이트, 트렌드, 그리고 실무 팁을 공유합니다."
>
  <script type="application/ld+json" set:html={JSON.stringify(collectionSchema)} />
  <section class="py-12 md:py-20">
    <Container>
      <div class="rounded-2xl bg-card border border-border overflow-hidden">
        <div class="px-6 md:px-10 pt-8 pb-6">
          <h1 class="text-3xl md:text-4xl font-bold">
            블로그
          </h1>
          <p class="mt-3 text-muted-foreground text-lg">
            AI 교육 인사이트와 트렌드를 공유합니다
          </p>
        </div>
        <hr class="border-border" />
        <div class="px-6 md:px-10 pb-8 pt-2">
          {posts.length > 0 ? (
            <div class="divide-y divide-border">
              {posts.map((post) => (
                <a href={`/${post.slug}/`} class="group block">
                  <article class="flex gap-5 md:gap-8 py-6">
                    <div class="w-[120px] h-[120px] md:w-[180px] md:h-[180px] flex-shrink-0 rounded-xl overflow-hidden">
                      {post.featuredImage ? (
                        <img
                          src={post.featuredImage}
                          alt={post.title}
                          class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                        />
                      ) : (
                        <div class="w-full h-full bg-gradient-to-br from-accent/20 to-accent/5 flex items-center justify-center">
                          <svg class="w-10 h-10 md:w-14 md:h-14 text-accent/40" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                            <line x1="16" y1="13" x2="8" y2="13"></line>
                            <line x1="16" y1="17" x2="8" y2="17"></line>
                            <line x1="10" y1="9" x2="8" y2="9"></line>
                          </svg>
                        </div>
                      )}
                    </div>
                    <div class="flex flex-col justify-center min-w-0 flex-1">
                      <div class="flex items-center gap-2 mb-2">
                        <Badge variant="accent">
                          블로그
                        </Badge>
                      </div>
                      <h3 class="text-lg md:text-xl font-bold leading-snug line-clamp-2 group-hover:text-accent transition-colors">
                        {post.title}
                      </h3>
                      {post.excerpt && (
                        <p class="mt-2 text-sm md:text-base text-muted-foreground line-clamp-3 leading-relaxed">
                          {stripHtml(post.excerpt)}
                        </p>
                      )}
                      <div class="mt-3 flex items-center gap-4 text-xs text-muted-foreground">
                        <span class="flex items-center gap-1">
                          <svg class="w-3.5 h-3.5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                          </svg>
                          {formatDate(post.date)}
                        </span>
                        {post.tags.length > 0 && (
                          <span class="flex items-center gap-1">
                            <svg class="w-3.5 h-3.5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                              <line x1="7" y1="7" x2="7.01" y2="7"></line>
                            </svg>
                            {post.tags.slice(0, 2).join(', ')}
                          </span>
                        )}
                      </div>
                    </div>
                  </article>
                </a>
              ))}
            </div>
          ) : (
            <div class="text-center py-20 text-muted-foreground">
              <p class="text-lg">아직 게시된 글이 없습니다.</p>
            </div>
          )}
        </div>
      </div>
    </Container>
  </section>
</BaseLayout>
