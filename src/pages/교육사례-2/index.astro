---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Container from "../../components/ui/Container.astro";
import Badge from "../../components/ui/Badge.astro";
import { getCaseStudyPosts } from "../../lib/wp-content";
import { formatDate } from "../../lib/utils";

const posts = await getCaseStudyPosts();

// Strip HTML from excerpts
const stripHtml = (html: string) => html.replace(/<[^>]*>/g, '').replace(/&amp;#8230;/g, '…').replace(/&[^;]+;/g, '').trim();

const collectionSchema = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: '교육사례 – 에이정',
  description: '에이정이 진행한 AI 교육 사례를 확인하세요.',
  url: 'https://aijeong.com/교육사례-2/',
  isPartOf: { '@type': 'WebSite', name: '에이정', url: 'https://aijeong.com' },
  numberOfItems: posts.length
};
---

<BaseLayout
  title="교육사례"
  description="에이정이 진행한 AI 교육 사례를 확인하세요."
>
  <script type="application/ld+json" set:html={JSON.stringify(collectionSchema)} />
  <section class="py-12 md:py-20">
    <Container>
      <div class="rounded-2xl bg-card border border-border overflow-hidden">
        <div class="px-6 md:px-10 pt-8 pb-6">
          <h1 class="text-3xl md:text-4xl font-bold">
            교육사례
          </h1>
          <p class="mt-3 text-muted-foreground text-lg">
            다양한 기관에서 진행한 AI 교육 사례를 확인하세요
          </p>
        </div>
        <hr class="border-border" />
        <div class="px-6 md:px-10 pb-8 pt-2">
          {posts.length > 0 ? (
            <div class="divide-y divide-border">
              {posts.map((post) => (
                <a href={`/${post.slug}/`} class="group block">
                  <article class="flex gap-5 md:gap-8 py-6">
                    <div class="w-[120px] h-[120px] md:w-[180px] md:h-[180px] flex-shrink-0 rounded-xl overflow-hidden">
                      {post.featuredImage ? (
                        <img
                          src={post.featuredImage}
                          alt={post.title}
                          class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                        />
                      ) : (
                        <div class="w-full h-full bg-gradient-to-br from-accent/20 to-accent/5 flex items-center justify-center">
                          <svg class="w-10 h-10 md:w-14 md:h-14 text-accent/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                          </svg>
                        </div>
                      )}
                    </div>
                    <div class="flex flex-col justify-center min-w-0 flex-1">
                      <div class="flex items-center gap-2 mb-2">
                        <Badge variant="accent">
                          교육사례
                        </Badge>
                      </div>
                      <h3 class="text-lg md:text-xl font-bold leading-snug line-clamp-2 group-hover:text-accent transition-colors">
                        {post.title}
                      </h3>
                      {post.excerpt && (
                        <p class="mt-2 text-sm md:text-base text-muted-foreground line-clamp-3 leading-relaxed">
                          {stripHtml(post.excerpt)}
                        </p>
                      )}
                      <div class="mt-3 flex flex-wrap items-center gap-3 text-xs text-muted-foreground">
                        <span class="flex items-center gap-1">
                          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                          {formatDate(post.date)}
                        </span>
                        {post.tags.length > 0 && (
                          <span class="flex items-center gap-1">
                            <svg class="w-3.5 h-3.5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                              <line x1="7" y1="7" x2="7.01" y2="7"></line>
                            </svg>
                            {post.tags.slice(0, 2).join(', ')}
                          </span>
                        )}
                      </div>
                    </div>
                  </article>
                </a>
              ))}
            </div>
          ) : (
            <div class="text-center py-20 text-muted-foreground">
              <p class="text-lg">아직 등록된 교육사례가 없습니다.</p>
            </div>
          )}
        </div>
      </div>
    </Container>
  </section>
</BaseLayout>
